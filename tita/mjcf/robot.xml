<!--
  该文件是一个MuJoCo XML模型文件，定义了一个双足轮腿机器人模型。
  该模型包含了机器人的基座和四条腿的关节、质量、惯性等信息。
  该文件使用了MuJoCo的XML格式，包含了资产、世界体、关节和电机等元素。
  -->
<mujoco>
  <compiler angle="radian" meshdir="../meshes" autolimits="true"/>

  <option timestep="0.001" gravity="0 0 -9.81"/>

  <asset>
    <!-- ========== 材质定义 ========== -->
    <material name="black" rgba="0.196 0.196 0.196 1"/>
    <material name="blue" rgba="0.0 0.0 0.8 1"/>
    <material name="green" rgba="0.0 0.8 0.0 1"/>
    <material name="grey" rgba="0.2 0.2 0.2 1"/>
    <material name="silver" rgba="0.914 0.914 0.847 1"/>
    <material name="orange" rgba="1.0 0.424 0.039 1"/>
    <material name="brown" rgba="0.871 0.812 0.765 1"/>
    <material name="red" rgba="0.8 0.0 0.0 1"/>
    <material name="white" rgba="1.0 1.0 1.0 1"/>

    <!-- ========== 网格文件定义 ========== -->
    <!-- 基座 -->
    <mesh file="base_link.STL" name="base_link_mesh"/>
    
    <!-- 左腿链 -->
    <mesh file="left_leg_1.STL" name="left_leg_1_mesh"/>
    <mesh file="left_leg_2.STL" name="left_leg_2_mesh"/>
    <mesh file="left_leg_3.STL" name="left_leg_3_mesh"/>
    <mesh file="left_leg_4.STL" name="left_leg_4_mesh"/>
    
    <!-- 右腿链 -->
    <mesh file="right_leg_1.STL" name="right_leg_1_mesh"/>
    <mesh file="right_leg_2.STL" name="right_leg_2_mesh"/>
    <mesh file="right_leg_3.STL" name="right_leg_3_mesh"/>
    <mesh file="right_leg_4.STL" name="right_leg_4_mesh"/>

    <!-- 其他可能的组件 -->
  </asset>

  <worldbody>
    <!-- 主基座 -->
    <body name="base_link" pos="0 0 0">
      <inertial pos="0.020452 0.0000035457 0.01871" mass="13.2" diaginertia="0.061855 0.036934 0.071232"/>
      <geom type="mesh" mesh="base_link_mesh" material="black"/>
      <geom type="box" size="0.235 0.15 0.095" pos="0 0 0.017" group="3"/>

      <!-- 左腿 -->
      <body name="left_leg_1" pos="0 0.0895 0" euler="1.5708 0 1.5708">
        <joint name="joint_left_leg_1" type="hinge" axis="0 0 1" limited="true" range="-0.785398 0.785398"/>
        <inertial pos="0.0016025 0.000050253 0.000638" mass="2.064" diaginertia="0.0043044 0.0029982 0.0022703"/>
        <geom type="mesh" mesh="left_leg_1_mesh" material="black"/>

        <body name="left_leg_2" pos="0.1426 0 0" euler="-1.5708 0 -1.5708">
          <joint name="joint_left_leg_2" type="hinge" axis="0 0 1" limited="true" range="-1.919862 3.490659"/>
          <inertial pos="0.021763 0.0019069 -0.027868" mass="3.0984" diaginertia="0.0029784 0.0064836 0.0088353"/>
          <geom type="mesh" mesh="left_leg_2_mesh" material="black"/>

          <body name="left_leg_3" pos="0.2 0 0">
            <joint name="joint_left_leg_3" type="hinge" axis="0 0 1" limited="true" range="-2.670354 -0.698132"/>
            <inertial pos="0.095348 0.011698 0.001838" mass="0.57244" diaginertia="0.000306 0.003201 0.003421"/>
            <geom type="mesh" mesh="left_leg_3_mesh" material="black"/>
            <geom type="box" size="0.1 0.035 0.025" pos="0.1 0.021 -0.002" euler="0 0 -0.131"/>

            <body name="left_leg_4" pos="0.2 0 0.0514">
              <joint name="joint_left_leg_4" type="hinge" axis="0 0 1" limited="false"/>
              <inertial pos="0.000002267 0.0000016471 -0.00095616" mass="1.5094" diaginertia="0.003547 0.003505 0.006905"/>
              <geom type="mesh" mesh="left_leg_4_mesh" material="black"/>
              <geom type="cylinder" size="0.0925 0.017" euler="0 0 1"/>
            </body>
          </body>
        </body>
      </body>

      <!-- 右腿 -->
      <body name="right_leg_1" pos="0 -0.0895 0" euler="1.5708 0 1.5708">
        <joint name="joint_right_leg_1" type="hinge" axis="0 0 1" limited="true" range="-0.785398 0.785398"/>
        <inertial pos="-0.0016025 0.000050253 0.000638" mass="2.064" diaginertia="0.0043044 0.0029982 0.0022703"/>
        <geom type="mesh" mesh="right_leg_1_mesh" material="black"/>

        <body name="right_leg_2" pos="-0.1426 0 0" euler="-1.5708 0 -1.5708">
          <joint name="joint_right_leg_2" type="hinge" axis="0 0 1" limited="true" range="-1.919862 3.490659"/>
          <inertial pos="0.021763 0.0019065 0.027873" mass="3.0987" diaginertia="0.0029784 0.0064836 0.0088353"/>
          <geom type="mesh" mesh="right_leg_2_mesh" material="black"/>

          <body name="right_leg_3" pos="0.2 0 0">
            <joint name="joint_right_leg_3" type="hinge" axis="0 0 1" limited="true" range="-2.670354 -0.698132"/>
            <inertial pos="0.095348 0.011698 -0.001838" mass="0.57244" diaginertia="0.000306 0.003201 0.003421"/>
            <geom type="mesh" mesh="right_leg_3_mesh" material="black"/>
            <geom type="box" size="0.1 0.035 0.025" pos="0.1 0.021 -0.002" euler="0 0 -0.131"/>

            <body name="right_leg_4" pos="0.2 0 -0.0514">
              <joint name="joint_right_leg_4" type="hinge" axis="0 0 1" limited="false"/>
              <inertial pos="0.0000023798 0.0000015854 0.00095595" mass="1.5094" diaginertia="0.003547 0.003505 0.006905"/>
              <geom type="mesh" mesh="right_leg_4_mesh" material="black"/>
              <geom type="cylinder" size="0.0925 0.017" euler="0 0 1"/>
            </body>
          </body>
        </body>
      </body>
    </body>
  </worldbody>

  <actuator>
    <!-- 定义所有关节的电机 -->
    <motor name="motor_left_leg_1" joint="joint_left_leg_1"/>
    <motor name="motor_left_leg_2" joint="joint_left_leg_2"/>
    <motor name="motor_left_leg_3" joint="joint_left_leg_3"/>
    <motor name="motor_left_leg_4" joint="joint_left_leg_4"/>
    <motor name="motor_right_leg_1" joint="joint_right_leg_1"/>
    <motor name="motor_right_leg_2" joint="joint_right_leg_2"/>
    <motor name="motor_right_leg_3" joint="joint_right_leg_3"/>
    <motor name="motor_right_leg_4" joint="joint_right_leg_4"/>
    <!-- 其他电机定义省略... -->
  </actuator>
</mujoco>
